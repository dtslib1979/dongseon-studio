{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "id": "dongseon-node-registry",
  "version": "1.0.0",
  "description": "DONGSEON Studio 노드(고객사/프로젝트) 레지스트리",
  "updatedAt": "2026-01-29",

  "stats": {
    "total": 0,
    "active": 0,
    "completed": 0,
    "prospect": 0
  },

  "nodes": [],

  "nodeTemplate": {
    "id": "string (required)",
    "name": "string (required)",
    "type": "enum: small-business | real-estate | solo-entrepreneur | custom",
    "package": "enum: small-business | real-estate | solo-entrepreneur | custom",
    "status": "enum: prospect | in-progress | active | completed | paused",
    "client": {
      "name": "string",
      "contact": {
        "phone": "string",
        "email": "string"
      }
    },
    "deliverables": {
      "website": "string (url)",
      "pwa": "boolean",
      "ai": "boolean"
    },
    "timeline": {
      "startedAt": "date",
      "deliveredAt": "date",
      "completedAt": "date"
    },
    "revenue": {
      "quoted": "number",
      "received": "number",
      "pending": "number"
    },
    "notes": "string"
  },

  "statusFlow": {
    "prospect": ["in-progress", "paused"],
    "in-progress": ["active", "paused"],
    "active": ["completed", "paused"],
    "completed": [],
    "paused": ["prospect", "in-progress", "active"]
  },

  "packageMapping": {
    "small-business": {
      "name": "소상공인 패키지",
      "defaultPrice": null,
      "defaultTimeline": "2주"
    },
    "real-estate": {
      "name": "부동산 패키지",
      "defaultPrice": null,
      "defaultTimeline": "2주"
    },
    "solo-entrepreneur": {
      "name": "1인사업자 패키지",
      "defaultPrice": null,
      "defaultTimeline": "3주"
    },
    "custom": {
      "name": "커스텀",
      "defaultPrice": null,
      "defaultTimeline": "협의"
    }
  }
}
